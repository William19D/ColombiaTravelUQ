         </children>
      </GridPane>
      <Label layoutX="166.0" layoutY="522.0" styleClass="textoRegular" stylesheets="@styles.css" text="Clima:">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <CheckBox fx:id="ckSoleado" layoutX="292.0" layoutY="529.0" mnemonicParsing="false" text="Soleado">
         <font>
            <Font size="18.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="ckTemplado" layoutX="418.0" layoutY="529.0" mnemonicParsing="false" text="Templado">
         <font>
            <Font size="18.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="ckFrio" layoutX="555.0" layoutY="529.0" mnemonicParsing="false" text="Frio">
