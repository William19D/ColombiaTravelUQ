            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnEliminar" layoutX="1050.0" layoutY="534.0" mnemonicParsing="false" onAction="#EliminarDestinoEvent" text="Eliminar">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnVolverMenuAdmins" layoutX="35.0" layoutY="645.0" mnemonicParsing="false" onAction="#vovlerMenuAdmins" prefHeight="77.0" prefWidth="84.0" stylesheets="@styles.css">
         <font>
            <Font size="24.0" />
         </font>
         <styleClass>
            <String fx:value="textoLight" />
            <String fx:value="botonClick" />
         </styleClass>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
