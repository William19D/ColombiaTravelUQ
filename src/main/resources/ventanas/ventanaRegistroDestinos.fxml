            </Label>
            <Label styleClass="textoRegular" stylesheets="@styles.css" text="Descripcion:" GridPane.rowIndex="2">
               <font>
                  <Font name="Nirmala UI" size="28.0" />
               </font>
            </Label>
            <Label styleClass="textoRegular" stylesheets="@styles.css" text="Imagen:" GridPane.rowIndex="3">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <TextField fx:id="txtNombre" prefHeight="37.0" prefWidth="244.0" promptText="Ingrese el nombre" GridPane.columnIndex="1" />
